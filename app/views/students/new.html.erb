<h3>Agregue un nuevo estudiante</h3>

    <%= form_for(@student, :html => {class: "form-horizontal", role:"form"}) do |f| %>
    
    <div class="form-group row">
      <div class="form-control-label col-md-1">
        <%= f.label :name %>        
      </div>
      <div class="col-md-11">
        <%= f.text_field :name, class: 'form-control', placeholder: "Nombre del estudiante", autofocus: true %>
      </div>
    </div>

    <div class="form-control-label col-md-1">
        <%= f.label :lastname %>        
      </div>
      <div class="col-md-11">
        <%= f.text_field :lastname, class: 'form-control', placeholder: "Apellido del estudiante"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="form-control-label col-md-1">
        <%= f.label :telephone %>        
      </div>
      <div class="col-md-11">
        <%= f.text_field :telephone,  class: 'form-control', placeholder: "86849684" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-offset-1 col-md-11">
        <%= f.submit "Crear Estudiante", class: 'btn btn-primary btn-lg pull-right' %>
      </div>
    </div>
    <% end %>